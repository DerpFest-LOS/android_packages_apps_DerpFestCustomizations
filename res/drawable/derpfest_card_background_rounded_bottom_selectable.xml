<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/surface1" />
            <corners
                android:topRightRadius="@dimen/derpfest_card_corner_radius_small"
                android:topLeftRadius="@dimen/derpfest_card_corner_radius_small"
                android:bottomLeftRadius="@dimen/derpfest_card_corner_radius"
                android:bottomRightRadius="@dimen/derpfest_card_corner_radius" />
        </shape>
    </item>
    <item>
        <ripple android:color="@color/coloured_ripple">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <corners
                        android:topRightRadius="@dimen/derpfest_card_corner_radius_small"
                        android:topLeftRadius="@dimen/derpfest_card_corner_radius_small"
                        android:bottomLeftRadius="@dimen/derpfest_card_corner_radius"
                        android:bottomRightRadius="@dimen/derpfest_card_corner_radius" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>
